<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E0E0E0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guerrero.guerrerolabexer2.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#43A047"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:paddingTop="75dp"
        android:paddingLeft="60dp"
        android:textSize="18sp"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="160dp"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:paddingTop="75dp"
        android:hint="Enter Username"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textColor="#43A047"
        android:paddingTop="120dp"
        android:paddingLeft="60dp"
        android:textSize="18sp"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:paddingTop="120dp"
        android:hint="Enter Password"/>

    <Button
        android:id="@+id/btn_Shared"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SHARED PREFERENCES"
        android:onClick="sharedPref"
        android:background="#90A4AE"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/etPassword"
        android:layout_alignLeft="@+id/btn_Internal"
        android:layout_alignStart="@+id/btn_Internal" />

    <Button
        android:id="@+id/btn_Internal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="INTERNAL STORAGE"
        android:onClick="internalStore"
        android:background="#FFAB91"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/btn_Shared"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_Next"
        android:layout_width="110dp"
        android:background="#FFCC80"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:onClick="nexttt"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/btn_Internal"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
